<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SolidEat.Views.ReviewView">
    <StackLayout Padding="10">
        <ListView x:Name="reviewsListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Padding="10">
                            <Label Text="{Binding ReviewerName}" FontSize="Medium" VerticalOptions="Center" />
                            <Label Text="{Binding Content}" FontSize="Small" VerticalOptions="Center" />
                            <Label Text="{Binding Rating}" FontSize="Small" VerticalOptions="Center" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentView>
